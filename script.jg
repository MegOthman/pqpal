<script>
  function showContent(boxId) {
    const content = {
      boxA: "This is content for Box A.",
      boxB: "This is content for Box B.",
      boxC: "This is content for Box C.",
      boxD: "This is content for Box D.",
    };
    
    const display = document.getElementById('box-content');
    display.innerHTML = content[boxId];
    display.style.display = 'block';
  }
</script>
